<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageViewTheme" parent="Theme.AppCompat">
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/background_toolbar</item>
        <item name="android:navigationBarColor">@color/background_toolbar</item>
        <item name="actionBarStyle">@style/actionbar_trans</item>
        <item name="actionOverflowButtonStyle">@style/overflow_button</item>

    </style>

    <style name="actionbar_trans" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/background_toolbar</item>
        <item name="elevation">2dp</item>
        <item name="displayOptions">homeAsUp|showTitle</item>
        <item name="titleTextStyle">@style/actionbar_title</item>
        <item name="subtitleTextStyle">@style/actionbar_subtitle</item>
    </style>
</resources>