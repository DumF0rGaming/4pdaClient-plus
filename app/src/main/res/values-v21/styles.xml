        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/background_toolbar</item>
        <item name="android:actionBarStyle">@style/actionbar_trans</item>
        <item name="actionBarStyle">@style/actionbar_trans</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionOverflowButtonStyle">@style/overflow_button</item>

