<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5.0dip">

    <ImageView
        android:id="@+id/icon"
    android:layout_gravity="center_vertical"
   android:layout_width="56.0dip"
   android:layout_height="56.0dip"
   android:layout_marginLeft="5.0dip"
   android:layout_marginRight="5.0dip"
   android:src="@drawable/default_app"
   android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/version"
        android:layout_toRightOf="@+id/icon"
        android:singleLine="true"
        android:text="name"
        android:textSize="16.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5.0dip"
        android:maxWidth="150.0dip"
        android:text="ver"
        android:textSize="12.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/icon"
        android:drawableLeft="@drawable/ic_today"
        android:drawablePadding="5.0dip"
        android:gravity="center_vertical"
        android:text="date"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/version_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date_update"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_4pda"
        android:drawablePadding="5.0dip"
        android:gravity="center_vertical"
        android:maxWidth="150.0dip"
        android:singleLine="true"
        android:text="ver"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="2.0dip"
        android:text="desc"
        android:textSize="10.0sp" />

    <TextView
        android:id="@+id/dummy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_update"
        android:layout_marginTop="2.0dip"
        android:layout_toLeftOf="@+id/version_market"
        android:layout_toRightOf="@+id/icon"
        android:textSize="10.0sp" />

    <TextView
        android:id="@+id/version_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dummy"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_market"
        android:drawablePadding="5.0dip"
        android:gravity="center_vertical"
        android:text="ver"
        android:textSize="12.0sp" />
</RelativeLayout>
