<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbarlayout" android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:theme="@style/MainThemeLight.AppBarOverlay">

                    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary" app:popupTheme="?attr/actionBarPopupTheme"
                        app:subtitleTextAppearance="@style/actionbar_subtitle" app:titleTextAppearance="@style/actionbar_title"/>

                </android.support.design.widget.AppBarLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:id="@+id/toolbar_shadow"
                        android:background="@drawable/toolbar_shadow" />
                </FrameLayout>


            </android.support.design.widget.CoordinatorLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:id="@+id/statusBar"
                android:orientation="horizontal"/>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            style="?drawer_menu"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="169dp"
                android:id="@+id/topInform"
                android:clickable="true">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/user_background"
                    android:id="@+id/userBackground"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#33000000"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_refresh_white_24dp"
                    android:layout_alignTop="@+id/avatarWrapper"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:id="@+id/infoRefresh"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_link_variant_white_24dp"
                    android:layout_alignTop="@+id/avatarWrapper"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="64dp"
                    android:id="@+id/openLink"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/avatarWrapper">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        app:border_width="0dp"
                        app:border_color="@android:color/transparent"/>
                    <ImageView
                        android:id="@+id/imgAvatarSquare"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:id="@+id/textWrapper"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/userNick"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:id="@+id/userRep"
                        android:layout_toRightOf="@+id/userNick"
                        android:paddingLeft="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/qmsMessages"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/userNick"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="56dp"
                        android:id="@+id/loginButton"
                        android:text="Войти"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </RelativeLayout>

            <ExpandableListView
                android:id="@+id/left_drawer_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:childDivider="#00000000"
                android:choiceMode="singleChoice"
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:groupIndicator="@android:color/transparent"
                android:layout_below="@+id/topInform"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
            android:layout_gravity="end"
            style="?drawer_menu"
            >

            <LinearLayout
                android:id="@+id/tab_list_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_above="@+id/closeAll">
                <ListView
                    android:id="@+id/tab_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/closeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Закрыть все"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp" />
        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/fakeSB"
        android:background="@color/statusBar_translucent_light"
        android:visibility="gone"/>
</RelativeLayout>


