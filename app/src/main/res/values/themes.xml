<resources>


    <style name="Theme.White" parent="@android:style/Theme.Holo.Light">

        <item name="theme_background">@android:color/white</item>
        <item name="theme_light_background">@color/theme_light_background_light</item>
    </style>

    <style name="Theme.Black" parent="@android:style/Theme.Holo">
        <item name="theme_background">@android:color/black</item>
        <item name="theme_light_background">@color/theme_light_background_dark</item>
    </style>

    <style name="Theme.Transluent.White" parent="Theme.White">
        <!--<item name="android:actionBarStyle">@style/Theme.Transluent.ActionBar.White</item>-->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Transluent.Black" parent="Theme.Black">
        <!--<item name="android:actionBarStyle">@style/Theme.Transluent.ActionBar.Black</item>-->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Transluent.ActionBar.White" parent="@android:style/Widget.Holo.Light.ActionBar">

    </style>

    <style name="Theme.Transluent.ActionBar.Black" parent="@android:style/Widget.Holo.ActionBar">

    </style>

    <style name="TextAppearance.Theme.PlainText" parent="android:TextAppearance.Theme">
        <item name="android:textStyle">normal</item>
    </style>


</resources>